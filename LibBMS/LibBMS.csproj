<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Serilog core package -->
    <PackageReference Include="Serilog" Version="2.10.0" />  <!-- Use latest version -->

    <!-- Serilog sink for writing to the console -->
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" /> <!-- Use latest version -->

    <!-- Serilog sink for writing to files -->
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" /> <!-- Use latest version -->

    <!-- Optional: Serilog compact JSON formatter for structured logging (if desired) -->
    <PackageReference Include="Serilog.Formatting.Compact" Version="1.1.0" /> <!-- Use latest version -->
  </ItemGroup>

</Project>
